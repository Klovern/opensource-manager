<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="navbar-left">
                <ul class="nav navbar-nav" style="float: left; padding-left: 20px; padding-top: 3px;">
                    @Html.Partial("_ProjectList")
                    @Html.Action("List", "Project")
                </ul>
                </div>

                <div class="navbar-right">
                    <ul class="nav navbar-nav" style="float: right; padding-right: 20px;">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
    </div>

<div class="row">
    <div class="col-md-2">
        
        @Html.Partial("_Side-nav")
    </div>
    
    <div class="col-md-10">@RenderBody()</div>
   
</div>
   


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
